{
    "name": "jasperro-website",
    "version": "1.0.0",
    "description": "Jasper Albering's personal website, built with eleventy",
    "scripts": {
        "start": "yarn run dev",
        "dev": "yarn run clean & cross-env NODE_ENV=development run-p gulp:dev postcss:dev",
        "build": "yarn run clean & cross-env NODE_ENV=production run-s gulp:build eleventy:build postcss:build",
        "gulp:dev": "gulp dev",
        "gulp:build": "gulp build",
        "postcss:dev": "NODE_ENV=development postcss ./src/assets/styles/main.pcss -o ./dist/assets/main.css -w",
        "postcss:build": "NODE_ENV=production postcss ./src/assets/styles/main.pcss -o ./dist/assets/main.css",
        "eleventy:build": "cross-env ELEVENTY_ENV=production eleventy",
        "clean": "del-cli dist/**"
    },
    "repository": {
        "type": "git",
        "url": "http://github.com/jasperro/jasperro-website"
    },
    "author": "Jasper Albering",
    "license": "MIT",
    "devDependencies": {
        "@11ty/eleventy": "^0.12.1",
        "@11ty/eleventy-img": "^0.9.0",
        "@11ty/eleventy-navigation": "^0.2.0",
        "@11ty/eleventy-plugin-rss": "^1.0.9",
        "@tailwindcss/forms": "^0.3.3",
        "@tailwindcss/typography": "^0.4.1",
        "autoprefixer": "^10.2.6",
        "cross-env": "^7.0.2",
        "cssnano": "^5.0.5",
        "cssnano-preset-advanced": "^5.1.2",
        "dayjs": "^1.10.5",
        "del-cli": "^3.0.1",
        "gulp": "^4.0.2",
        "gulp-svg-sprite": "^1.5.0",
        "html-minifier": "^4.0.0",
        "lodash": "^4.17.20",
        "markdown-it": "^12.0.2",
        "mini-css-extract-plugin": "^1.6.0",
        "node-fetch": "^2.6.1",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.3.0",
        "postcss-cli": "^8.3.1",
        "postcss-import": "^14.0.2",
        "postcss-nested": "^5.0.1",
        "postcss-preset-env": "^6.7.0",
        "tailwindcss": "^2.1.4"
    }
}
