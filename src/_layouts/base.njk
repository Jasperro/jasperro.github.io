<!DOCTYPE html>
<html lang="{{ locale }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ meta.title }}</title>

        <link rel="stylesheet" href="{{ '/assets/styles/main.css' | url }}">
        {% include "meta.njk" %}
        <script>
            function setUserLanguage(language = "en") {
                document.cookie = `nf_lang=${language}; secure; path=/`;
            };
        </script>
    </head>
    <body data-theme="light">
        <div hidden>{% iconsprite %}</div>
        <div class="layout" role="document">
            {% include "header.njk" %}
            <main id="main" class="main" tabindex="-1">
                {{ content | safe }}
            </main>
            {% include "footer.njk" %}
        </div>

        <script type="text/javascript" src="{{ '/assets/scripts/main.js' | url }}"></script>
    </body>
</html>
