---
layout: base
eleventyNavigation:
  order: -999
---
<div class="home">
    <div class="home__hero">
        <div class="home__hero__title">{{ home[locale].title | safe }}</div>
        <div class="home__hero__subtitle">{{ home[locale].description | safe }}
        </div>
    </div>

    <div class="home__card_info">
        {{ home[locale].info | safe }}
        {% icon 'github' %}
        {% icon 'react' %}
        {% icon 'linux' %}
        {% icon 'language-html5' %}
        {% icon 'language-javascript' %}
        {% icon 'language-css3' %}
        {% icon 'sass' %}
        {% icon 'gatsby' %}
        {% icon 'graphql' %}
        {% icon 'raspberry-pi' %}
        {% icon 'home-assistant' %}
        {% icon 'godot' %}
        {% icon 'console' %}
        {% icon 'open-source-initiative' %}
    </div>
    <div class="home__title_subsection">{{ home[locale].projects }}</div>

    <div class="home__projects">
        <div class="home__card_project">
            <img src="/assets/images/nate-grant-QQ9LainS6tI-unsplash.jpg"/>
            <div class="home__card_project_description">
        Wordpress thingy 
        {% icon 'wordpress' %}
            </div>
        </div>
        <div class="home__card_project">
            <img src="/assets/images/nate-grant-QQ9LainS6tI-unsplash.jpg"/>
            <div class="home__card_project_description">
        Egg Simulator 
        {% icon 'godot' %}
            </div>
        </div>
    </div>

    <form name="contact" class="home__contact_form" method="POST" data-netlify="true">
        <h5>{{ home[locale].contactHeader }}</h5>
        <p>
            <label>{{ home[locale].contactName }}<input type="text" name="name"/></label>
        </p>
        <p>
            <label>{{ home[locale].contactMail }}<input type="email" name="email"/></label>
        </p>
        <p>
            <label>{{ home[locale].contactMessage }}
                <textarea name="message"></textarea>
            </label>
        </p>
        <p>
            <button type="submit">{{ home[locale].submit }}</button>
        </p>
    </form>

</div>