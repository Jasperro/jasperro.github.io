.scrollingcards {
    @apply lg:grid flex overflow-x-auto flex-nowrap gap-x-4 gap-y-4 grid-cols-fit-80 lg:mx-0 lg:px-0;
    scrollbar-width: none;
    padding: 40rem;
    margin: -40rem;

    &::-webkit-scrollbar {
        height: 0px;
    }

    &::after {
        content: " ";
        min-width: 39rem;
    }
}
